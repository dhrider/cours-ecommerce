{% extends 'base.html.twig' %}

{% block title %}
    Accueil
{% endblock %}

{% block body %}
<h1>Nos produits phares</h1>
<div class="row">
    {% for product in products %}
        <div class="col">
            <div class="card">
                <img src="{{ product.mainPicture }}" alt="" class="img-fluid">
                <div class="card-body">
                    <h4 class="card-title">{{ product.name }} ({{ product.price / 100 }} €)</h4>
                    <span class="badge badge-info">{{ product.category.name }}</span>
                    <p class="card-text">{{ product.shortDescription }}</p>
                    <a href="#" class="btn btn-primary btn-sm">Détails</a>
                    <a href="" class="btn btn-success btn-sm">Ajouter</a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
<hr>
<h2>Un service irréprochable</h2>
<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quidem, quis.</p>
<div class="row">
    {% include 'shared/_assurance.html.twig' with {
        'color': 'primary',
        'icon': 'truck',
        'text': 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quidem, quis.'
    } %}
    {% include 'shared/_assurance.html.twig' with {
        'color': 'success',
        'icon': 'check',
        'text': 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quidem, quis.'
    } %}
    {% include 'shared/_assurance.html.twig' with {
        'color': 'warning',
        'icon': 'lock',
        'text': 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quidem, quis.'
    } %}
</div>
{%  endblock %}